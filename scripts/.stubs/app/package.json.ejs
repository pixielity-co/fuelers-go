{
  "name": "@apps/<%= name %>",
  "version": "1.0.0",
  "private": true,
  "description": "<%= nameTitle %> application",
  "main": "src/main.go",
  "scripts": {
    "setup": "mkdir -p env && cp -n env/.env.example env/.env || true",
    "dev": "air",
    "build": "mkdir -p bin && go build -o bin/<%= name %> ./src/main.go",
    "start": "./bin/<%= name %>",
    "test": "go test -v ./...",
    "lint": "golangci-lint run ./...",
    "deploy": "npx tsx ../../scripts/deploy-service.ts <%= name %>",
    "clean": "rm -rf bin tmp coverage.out",
    "typecheck": "go vet ./...",
    "generate": "go generate ./...",
    "tidy": "go mod tidy",
    "format": "go fmt ./..."
  },
  "dependencies": {<% if (deps && deps.length > 0) { %>
<% deps.forEach(function(dep, i) { -%>
    "@packages/<%= dep %>": "workspace:*"<%= i < deps.length - 1 ? ',' : '' %>
<% }); -%>
<% } %>},
  "devDependencies": {},
  "peerDependencies": {}
}
