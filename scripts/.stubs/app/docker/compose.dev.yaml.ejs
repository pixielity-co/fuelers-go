# ─────────────────────────────────────────────────────────────────────────────
# Fuelers Monorepo - Development Environment
# Service: <%= nameTitle %>
# ─────────────────────────────────────────────────────────────────────────────
# 
# Orchestrates the <%= nameTitle %> service for development with hot-reload.
# ─────────────────────────────────────────────────────────────────────────────

services:
  # ─── <%= nameTitle %> Application ──────────────────────────────────────────
  <%= name %>:
    build:
      context: ../../..
      dockerfile: apps/<%= name %>/docker/Dockerfile
    container_name: <%= name %>-app-dev
    ports:
      - "${APP_PORT:-8080}:8080"
    env_file:
      - ../env/.env
    environment:
      - ENV=development
      - GO_ENV=development
    depends_on:
      <%= name %>-redis:
        condition: service_healthy
    restart: unless-stopped

  # ─── Infrastructure ────────────────────────────────────────────────────────
  <%= name %>-redis:
    image: redis:7-alpine
    container_name: <%= name %>-dev-redis
    ports:
      - "6379"
    healthcheck:
      test: ["CMD", "redis-cli", "ping"]
      interval: 1s
      timeout: 3s
      retries: 30
