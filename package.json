{
  "name": "fuelers-go",
  "private": true,
  "packageManager": "pnpm@10.22.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "postinstall": "pnpm workspace:sync && pnpm go:sync && turbo run tidy",
    "setup": "turbo run setup",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "generate": "turbo run generate",
    "clean": "turbo run clean",
    "cleanup": "pnpm clean && go clean -cache -testcache && rm -rf .turbo node_modules pnpm-lock.yaml go.work.sum && find . -type d -name 'node_modules' -prune -exec rm -rf {} + && find . -type d -name '.turbo' -prune -exec rm -rf {} + && find . -name '*.log' -delete",
    "deploy": "turbo run deploy",
    "format": "pnpm format:prettier && pnpm format:go",
    "format:prettier": "prettier --write . --config tooling/linting/.prettierrc --ignore-path tooling/linting/.prettierignore",
    "format:go": "find . -name go.mod -not -path '*/node_modules/*' -execdir go fmt ./... \\;",
    "format:check": "prettier --check . --config tooling/linting/.prettierrc --ignore-path tooling/linting/.prettierignore",
    "tidy": "go work sync && turbo run tidy",
    "workspace:sync": "npx tsx tooling/scripts/go-workspace-sync.ts",
    "go:sync": "go work sync",
    "make:app": "npx tsx tooling/scripts/make-app.ts",
    "make:package": "npx tsx tooling/scripts/make-package.ts",
    "test:scripts": "vitest run tooling/scripts/__tests__/*.spec.ts",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@commitlint/types": "^20.4.0",
    "@types/ejs": "^3.1.5",
    "@types/node": "^22.19.11",
    "ejs": "^4.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "tsx": "^4.21.0",
    "turbo": "^2.0.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.{js,ts,json,md,yml,yaml}": "prettier --write --config tooling/linting/.prettierrc --ignore-path tooling/linting/.prettierignore",
    "*.go": "go fmt"
  }
}
